<div class="card">
  <h5>Treatment name: <small><%= @treatment.name %></small></h5>
  <h5>Injury addressed: <small><%= @treatment.injury %></small></h5>
  <h5>Length of regimen: <small><%= @treatment.duration %></small></h5>
  <h5>Frequency of exercise: <small><%= @treatment.frequency %></small></h5>
</div>


<% if current_user.role == "clinician" %>
  <%= link_to "Edit", edit_clinician_treatment_path(@treatment) %> |
  <%= link_to "Back", clinician_treatments_path %>
  <% elsif current_user.role == "patient" %>
  <%= link_to "Edit", edit_patient_treatment_path(@treatment) %> |
  <%= link_to "Back", patient_treatments_path %>
  <% else %>
  redirect_to user
<% end %>
