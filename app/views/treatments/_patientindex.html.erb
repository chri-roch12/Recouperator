
<div class="card">
  <h3>Treatments</h3>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% if current_user.patient? %>

      <tbody>
        <% @treatments.each do |treatment| %>
          <tr>
            <td><%= treatment.name %></td>
            <td><%= treatment.injury %></td>
            <td>
              <%= link_to "", patient_treatment_path(treatment), class: "fi-compass link" %><p></p>
              <%= link_to "", edit_patient_treatment_path(treatment),class: "fi-pencil link" %><p></p>
              <%= link_to "", patient_treatment_path(treatment), method: :delete, data: { confirm: "Are you sure?" }, class: "fi-trash link" %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>

      <br>

      <%= link_to "New Treatment", new_patient_treatment_path, class: "link" %>
    <% elsif current_user.clinician? %>

      <tbody>
        <% @treatments.each do |treatment| %>
          <tr>
            <td><%= treatment.name %></td>
            <td><%= treatment.injury %></td>
            <td>
              <%= link_to "", clinician_treatment_path(treatment), class: "fi-compass link" %><p></p>
              <%= link_to "", edit_clinician_treatment_path(treatment),class: "fi-pencil link" %><p></p>
              <%= link_to "", clinician_treatment_path(treatment), method: :delete, data: { confirm: "Are you sure?" }, class: "fi-trash link" %>
            </td>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>

      <br>

    <%= link_to "New Treatment", new_clinician_treatment_path, class: "link" %>

    <% else %>
    redirect_to user_path
    <% end %>

</div>
