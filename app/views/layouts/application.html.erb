<meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

 <%= csrf_meta_tags %>
    <link href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">

</head>

<body>
    <div class="title-bar">
      <div class="title-bar-left">
        <h1><span class="title-bar-title">Studious</span></h1>
      </div>
      <div class="title-bar-right">
        <%= link_to "Register", new_user_registration_path, class: "button", method: "get" %>
        <%= link_to "Log In", new_user_session_path, class: "button", method: "get" %>
        <%= link_to "Log Out", destroy_user_session_path, class: "button", method: "delete" %>
    <%= render "shared/titlebar" %>

    <% if alert || notice %>
      <div id="flash" class="flash text-center">
        <h4><%= notice %><%= alert %></h4>
   </div>
    </div>
    <% if notice || alert %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
 <% end %>

 <%= yield %>

    <footer class="footer">
      <div class="row full-width">
        <div class="small-12 medium-4 columns">
          <i class="fi-lightbulb"></i>
          <h6>A test place for mission statement.</h6>
        </div>
        <div class="small-12 medium-4 columns">
          <i class="fi-torsos-all"></i>
          <h6>More test stuff.</h6>
        </div>
        <div class="small-12 medium-4 columns">
          <i class="fi-link"></i>
          <h6>Register</h6>
          <h6>Log-In</h6>
        </div>
      </div>
    </footer>
    <%= render "shared/footer" %>

</body>
</html>
